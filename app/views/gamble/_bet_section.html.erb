<div class="relative bg-green-300 dark:bg-slate-800 rounded-lg px-6 py-8 ring-1 shadow-lg">
  <h2 class="text-slate-900 dark:text-slate-200 text-2xl font-semibold text-center mb-6">Place Your Bet</h2>
  
  <div class="bg-slate-50 dark:bg-slate-900 rounded-lg p-4 mb-6 ring-1 ring-slate-200 dark:ring-slate-700">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-700 flex items-center justify-center shadow-lg">
          <span class="text-white font-bold"><%= participant.name.first.upcase %></span>
        </div>
        <div>
          <h3 class="text-slate-900 dark:text-slate-200 font-medium"><%= participant.name %></h3>
          <div class="flex items-center space-x-1">
            <span class="text-lg font-bold text-orange-400"><%= participant.bonus_points_total %></span>
            <span class="text-slate-400 text-sm">bonus points available</span>
          </div>
        </div>
      </div>
      
      <div class="text-right">
        <div class="text-slate-500 text-sm">Bet amount:</div>
        <div class="text-slate-900 dark:text-slate-200 font-semibold">$1.00</div>
      </div>
    </div>
  </div>
  
  <div class="space-y-4">
    <%= form_with url: gamble_spin_path, 
        method: :post, 
        local: false,
        class: "w-full",
        data: { 
          turbo_stream: true,
          turbo_frame: "_top"
        } do |form| %>
      <%= form.hidden_field :participant_id, value: participant.id %>
      <%= form.submit "🎲 Place Bet & Spin", 
          class: "w-full p-4 bg-blue-600 hover:bg-blue-700 text-white font-bold text-lg rounded shadow transition-colors",
          data: { 
            disable_with: "🎲 Spinning..."
          } %>
    <% end %>
    
    <div class="text-center text-slate-400 text-sm">
      <span class="relative">
        <span class="absolute inset-0 flex items-center">
          <span class="w-full border-t border-slate-300 dark:border-slate-600"></span>
        </span>
        <span class="relative bg-green-300 dark:bg-slate-800 px-3">or</span>
      </span>
    </div>
    
    <%= form_with url: gamble_reset_path, 
        method: :post, 
        local: false,
        class: "w-full",
        data: { 
          turbo_stream: true,
          turbo_frame: "_top"
        } do |form| %>
      <%= form.submit "← Back to Selection", 
          class: "w-full p-2 border-2 border-blue-500 text-blue-600 hover:bg-blue-500 hover:text-white dark:border-blue-400 dark:text-blue-400 dark:hover:bg-blue-400 dark:hover:text-slate-900 font-medium rounded transition-colors" %>
    <% end %>
  </div>
</div>