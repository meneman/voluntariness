<div class="relative bg-green-300 dark:bg-slate-800 rounded-lg px-6 py-8 ring-1 shadow-lg" data-participant-id="<%= participant.id %>">
  <h2 class="text-slate-900 dark:text-slate-200 text-2xl font-semibold text-center mb-6">Spin the Wheel</h2>
  
  <div class="bg-slate-50 dark:bg-slate-900 rounded-lg p-4 mb-6 ring-1 ring-slate-200 dark:ring-slate-700 flex justify-center">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-700 flex items-center justify-center shadow-lg">
        <span class="text-white font-bold"><%= participant.name.first.upcase %></span>
      </div>
      <div>
        <h3 class="text-slate-900 dark:text-slate-200 font-medium"><%= participant.name %></h3>
        <div class="flex items-center space-x-1">
          <span class="text-lg font-bold text-orange-400"><%= participant.bonus_points_total %></span>
          <span class="text-slate-400 text-sm">bonus points remaining</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="spinning-wheel-container">
    <div id="wrapper" data-controller="spinning-wheel" 
         data-spinning-wheel-target-angle-value="<%= target_angle %>"
         data-spinning-wheel-winning-item-value="<%= winning_item.to_json %>">
      <div id="wheel">
        <div id="inner-wheel" data-spinning-wheel-target="innerWheel">
          <% VoluntarinessConstants::OBTAINABLE_ITEMS.each do |item| %>
            <div class="sec" data-spinning-wheel-target="section">
              <%= item[:svg].html_safe %>
            </div>
          <% end %>
        </div>
        
        <!-- Spin button for user to click -->
        <div id="spin" 
             data-action="click->spinning-wheel#spin" 
             data-spinning-wheel-target="spinButton">
             
          <div id="inner-spin"></div>
        </div>
        
        <div id="shine"></div>
      </div>
      <div id="txt" data-spinning-wheel-target="textOutput" style="display: none;"></div>
    </div>
  </div>
  
  <div class="text-center mt-6">
    <p class="text-slate-900 dark:text-slate-200 text-lg font-medium mb-2">Click the "SPIN" button to spin the wheel!</p>
    <p class="text-slate-400 text-sm">The wheel will spin for a few seconds and then reveal your prize.</p>
  </div>
  
  <script>
    // Auto-advance to result when spinning wheel completes (handled by the spinning-wheel:complete event)
    // The spinning wheel controller will dispatch a 'complete' event after 7 seconds
    // This will be caught by the gamble controller's onSpinComplete method
  </script>
</div>