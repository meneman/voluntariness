<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag("seifenblasen4.png") %>
    <h2 class="mt-6 text-center text-3xl font-bold leading-9 tracking-tight dark:text-slate-200 text-gray-900">Sign up</h2>
  </div>
  <div class="mt-6 sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="text-center mb-4 bg-blue-50 border border-blue-200 text-blue-700 px-4 py-8 rounded-lg">
      <h3 class="text-lg font-semibold mb-2">Invitation Needed</h3>
      <p class="text-sm">
        Registration is currently by invitation only. Please contact an administrator to receive an invitation.
      </p>
    </div>

    <p class="mt-6 text-center text-sm text-gray-500">
      Already have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500", data: { turbo: false } %>
    </p>
  </div>
</div>