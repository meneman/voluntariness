<div class="flex items-center justify-between">
  <div >
    <h3 class="text-base font-medium text-slate-200">Enable Streak Boni</h3>
    <p class="text-sm text-slate-400">After a 5 day streak participants get 1 bonus point for completing tasks</p>
  </div>
  <div >
    <%= form_with url: toggle_streak_boni_path, method: :post, data: { turbo_frame: "streak_boni_toggle" } do |f| %>
      <label class="relative inline-flex items-center cursor-pointer">
        <%= f.check_box :enabled, checked: streak_enabled, class: "sr-only peer", onchange: "this.form.requestSubmit()" %>
        <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-slate-300 after:border-slate-600 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
      </label>
    <% end %>
  </div>
</div>

<% if streak_enabled %>
  <div class="mt-4 p-3 bg-slate-700 rounded-lg">
    <div id="streak_active_indicator" class=" flex items-center text-green-400 text-sm">
      Streak bonus activated
    </div>
    <%= form_with url: update_streak_bonus_days_trashhold_path, method: :post, class: "space-y-3" do |f| %>
      <div>
        <%= f.label :days_trashhold, "Streak bonus days threshold", class: "block text-sm text-slate-400 mb-1" %>
        <%= f.number_field :days_trashhold, value: current_user.streak_boni_days_trashhold || 5, min: 1, class: "w-full bg-slate-800 text-slate-200 border border-slate-600 rounded py-1 px-2" %>
      </div>
      <div>
        <%= f.submit "Update", class: "px-3 py-1 bg-indigo-600 hover:bg-indigo-700 text-white rounded text-sm" %>
      </div>
    <% end %>
  </div>
<% end %>
