<div class="px-3 py-2 text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wide">
  Switch Household
</div>

<% current_user.households.each do |household| %>
  <%= link_to switch_household_household_path(household), 
      data: { "turbo-method": "patch", "turbo-action": "replace" },
      class: "#{household == current_household ? 'bg-indigo-50 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300' : 'text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700'} flex items-center px-3 py-2 text-sm transition-colors duration-200" do %>
    <% if household == current_household %>
      <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
    <% else %>
      <div class="h-4 w-4 mr-2"></div>
    <% end %>
    <%= household.name %>
  <% end %>
<% end %>