<turbo-frame id="content">
<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-slate-900 dark:text-white">
      My Households
    </h1>
    <div class="flex space-x-3">
      <%= link_to "Join Household", join_households_path,
          class: "px-4 py-2 bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition-colors duration-200" %>
      <%= link_to "Create Household", new_household_path,
          class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors duration-200" %>
    </div>
  </div>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @households.each do |household| %>
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 <%= 'ring-2 ring-indigo-500' if household == current_household %>">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold text-slate-900 dark:text-white">
            <%= household.name %>
          </h3>
          <% if household == current_household %>
            <span class="bg-indigo-100 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 px-2 py-1 rounded-full text-xs font-medium">
              Current
            </span>
          <% end %>
        </div>
        
        <% if household.description.present? %>
          <p class="text-slate-600 dark:text-slate-400 mb-4 text-sm">
            <%= household.description %>
          </p>
        <% end %>
        
        <div class="text-sm text-slate-500 dark:text-slate-400 mb-4">
          <div class="flex items-center mb-1">
            <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
            </svg>
            <%= pluralize(household.users.count, 'member') %>
          </div>
          <div class="flex items-center mb-1">
            <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <%= pluralize(household.tasks.count, 'task') %>
          </div>
          <div class="flex items-center">
            <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <%= pluralize(household.participants.count, 'participant') %>
          </div>
        </div>
        
        <div class="flex space-x-2">
          <%= link_to "View", household_path(household), 
              class: "flex-1 text-center px-3 py-2 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors duration-200" %>
          <% if household != current_household %>
            <%= link_to "Switch", switch_household_household_path(household), method: :patch,
                class: "flex-1 text-center px-3 py-2 bg-indigo-100 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 rounded hover:bg-indigo-200 dark:hover:bg-indigo-900/70 transition-colors duration-200" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @households.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-slate-400 dark:text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2V7z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2m-6 4h4" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-slate-900 dark:text-white">No households</h3>
      <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">Get started by creating a household or joining one.</p>
      <div class="mt-6 flex justify-center space-x-3">
        <%= link_to "Create Household", new_household_path, 
            class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors duration-200" %>
        <%= link_to "Join Household", join_households_path, 
            class: "px-4 py-2 bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition-colors duration-200" %>
      </div>
    </div>
  <% end %>
</div>
</turbo-frame>