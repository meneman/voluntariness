<div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-lg max-w-2xl mx-auto">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Bet Details</h1>
    <div>
      <%= link_to "Edit", edit_bet_path(@bet), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= link_to "Delete", bet_path(@bet), method: :delete, 
                  confirm: "Are you sure?", 
                  class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="space-y-4">
    <div>
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Participant</h3>
      <p class="text-gray-600 dark:text-gray-300"><%= @bet.participant.name %></p>
    </div>

    <div>
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Description</h3>
      <p class="text-gray-600 dark:text-gray-300"><%= @bet.description %></p>
    </div>

    <div>
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Cost</h3>
      <p class="text-gray-600 dark:text-gray-300">$<%= @bet.cost %></p>
    </div>

    <div>
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Outcome</h3>
      <span class="px-3 py-1 rounded-full text-sm font-medium <%= @bet.outcome == 'won' ? 'bg-green-100 text-green-800' : @bet.outcome == 'lost' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
        <%= @bet.outcome.capitalize %>
      </span>
    </div>

    <div>
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Created</h3>
      <p class="text-gray-600 dark:text-gray-300"><%= @bet.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "Back to Bets", bets_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>