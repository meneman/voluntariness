<% # render_turbo_stream_action_flash_messages %>
<%= turbo_stream.replace "action_content_#{@action.id}" do %>
  <%= render 'layouts/action_content', message: @action %>
<% end %>
<%= turbo_stream.replace "task_overdue_#{@task.id}" do  %>
  <%= render partial: "tasks/task_overdue_tag", locals: { task: @task } %>
<% end %>