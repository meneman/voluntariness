<turbo-frame id="content">

  <% debug  @task_completion_by_participant %>
  
  <%= debug  @data %>

  <%
  pi_chart_options = {
                 responsive: true,
                 plugins: {
                   legend: { position: 'right',
} },
                   title: {
                     display: true,
                     text: 'Completed Tasks Distribution'
                   },

    
    scales: {
        x: {
          color: "whitesmoke",
          grid: {
            color: "whitesmoke"
          },
          ticks: {color:"whitesmoke"}
        },
        y: {
          color: "whitesmoke",
          grid: {
            color: "whitesmoke"
          },
          ticks: {color: "whitesmoke"}}
      }
                 }
               }.to_json

 chart_data_tasks_participants =  {
                 labels: @task_completion_by_participant.keys,
                 datasets: [{
                   data: @task_completion_by_participant.values,
                   backgroundColor: @task_completion_by_participant.keys.map { |name|
                     participant = @participants.find { |p| p.name == name }
                     participant&.color || "##{SecureRandom.hex(3)}"
                   }
                 }]
               }.to_json

  chart_data_tasks_points =  {
                 labels: @points_by_participant.keys,
                 datasets: [{
                   label: 'Points Earned',
                   data: @points_by_participant.values,
                   backgroundColor: @points_by_participant.keys.map { |name|
                     participant = @participants.find { |p| p.name == name }
                     participant&.color || "##{SecureRandom.hex(3)}"
                   }
                 }]
               }.to_json

  %>
<div class="container">
  <h1 class="text-center mb-4">Statistics Dashboard</h1>
  <div class="row mb-4">
    <div class="col-md-6">
       <div class="shadow-l text-slate-800 dark:text-slate-200  rounded flex flex-wrap gap-4">
          <div data-controller="chart"
               data-chart-type-value="doughnut"
               data-chart-data-value="<%= chart_data_tasks_participants %>"
               data-chart-options-value="<%= pi_chart_options %>">
            <canvas data-chart-target="canvas" id="participantPieChart"></canvas>
          </div>
                    <div data-controller="chart"
               data-chart-type-value="bar"
               data-chart-data-value="<%=chart_data_tasks_points %>"
               data-chart-options-value="<%= {
                 indexAxis: 'y',
                 responsive: true,
                 plugins: {
                   legend: { display: false },
                   title: {
                     display: true,
                     text: 'Total Points by Participant'
                   }
                 }
               }.to_json %>">
            <canvas data-chart-target="canvas" id="pointsBarChart"></canvas>
          </div>
    </div>

  </div>
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Most Popular Tasks</h3>
        </div>
        <div class="card-body">
          <div data-controller="chart"
               data-chart-type-value="bar"
               data-chart-data-value="<%= {
                 labels: @task_popularity.keys.map { |title| title.truncate(20) },
                 datasets: [{
                   label: 'Times Completed',
                   data: @task_popularity.values,
                   backgroundColor: 'rgba(54, 162, 235, 0.7)'
                 }]
               }.to_json %>"
               data-chart-options-value="<%= {
                 responsive: true,
                 plugins: {
                   legend: { display: false },
                   title: {
                     display: true,
                     text: 'Most Completed Tasks'
                   }
                 }
               }.to_json %>">
            <canvas data-chart-target="canvas" id="taskPopularityChart"></canvas>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Daily Activity</h3>
        </div>
        <div class="card-body">
          <div data-controller="chart"
               data-chart-type-value="line"
               data-chart-data-value="<%= {
                 labels: @activity_over_time.keys.map { |date| date.strftime("%d %b") },
                 datasets: [{
                   label: 'Tasks Completed',
                   data: @activity_over_time.values,
                   borderColor: 'rgba(75, 192, 192, 1)',
                   tension: 0.1,
                   fill: false
                 }]
               }.to_json %>"
               data-chart-options-value="<%= {
                 responsive: true,
                 plugins: {
                   title: {
                     display: true,
                     text: 'Daily Activity (Last 30 days)'
                   }
                 }
               }.to_json %>">
            <canvas data-chart-target="canvas" id="activityLineChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3>Participant Activity Over Time</h3>
        </div>
        <div class="card-body">
          <div data-controller="chart"
               data-chart-type-value="line"
               data-chart-data-value="<%= {
                 labels: @activity_over_time.keys.map { |date| date.strftime("%d %b") },
                 datasets: @participants.map { |participant|
                   {
                     label: participant.name,
                     data: @activity_over_time.keys.map { |date|
                       @participant_activity[[participant.name, date]] || 0
                     },
                     borderColor: participant.color || "##{SecureRandom.hex(3)}",
                     backgroundColor: (participant.color || "##{SecureRandom.hex(3)}").sub('rgb', 'rgba').sub(')', ', 0.2)'),
                     tension: 0.1
                   }
                 }
               }.to_json %>"
               data-chart-options-value="<%= {
                 responsive: true,
                 plugins: {
                   title: {
                     display: true,
                     text: 'Participant Activity Over Time'
                   }
                 }
               }.to_json %>">
            <canvas data-chart-target="canvas" id="participantActivityChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h3>Points Earned by Day</h3>
        </div>
        <div class="card-body">
          <div data-controller="chart"
               data-chart-type-value="bar"
               data-chart-data-value="<%= {
                 labels: @points_by_day.keys.map { |date| date.strftime("%d %b") },
                 datasets: [{
                   label: 'Points Earned',
                   data: @points_by_day.values,
                   backgroundColor: 'rgba(153, 102, 255, 0.7)'
                 }]
               }.to_json %>"
               data-chart-options-value="<%= {
                 responsive: true,
                 plugins: {
                   title: {
                     display: true,
                     text: 'Points Earned by Day'
                   }
                 }
               }.to_json %>">
            <canvas data-chart-target="canvas" id="pointsByDayChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
