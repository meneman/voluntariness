
<%= turbo_frame_tag "points_for_#{id}" do %>
  <div class="flex items-center justify-center">
    <span class="font-bold">
      <%= base_points || 0 %>
    </span>
    <% if animate == true %>
      <span data-controller="removals" class="absolute font-bold text-green-600 fade-away" data-action="animationend->removals#remove">
        <%= base_points || 0 %>
      </span>
    <% end  %>
  </div>
<% end %>
